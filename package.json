{
  "name": "unnichat-broadcast-monorepo",
  "version": "1.0.0",
  "description": "Unnichat Broadcast - Web App e Firebase Functions",
  "scripts": {
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "web:preview": "cd web && npm run preview",
    "web:install": "cd web && npm install",
    "functions:dev": "cd functions && npm run serve",
    "functions:build": "cd functions && npm run build",
    "functions:install": "cd functions && npm install",
    "install:all": "npm run web:install && npm run functions:install",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:web": "firebase deploy --only hosting",
    "firebase:deploy:functions": "firebase deploy --only functions"
  },
  "private": true,
  "dependencies": {
    "@mui/icons-material": "^7.2.0"
  }
}
